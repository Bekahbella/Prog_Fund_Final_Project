bunOrder()
   input bunChoice
   if bun <> bunChoice
      bunChoice = bunChoice + 1
   else
     output bunChoice
return

cheeseOrder()
   input cheeseChoice
   if cheese <> cheeseChoice
      cheeseChoice = cheeseChoice + 1
   else
     output cheeseChoice
return

meatOrder()
   input meatChoice
   if meat <> meatChoice
      meatChoice = meatChoice + 1
   else
     output meatChoice
return


